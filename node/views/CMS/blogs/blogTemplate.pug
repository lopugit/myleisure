        .row.content-row
          .col-lg-12.col-lg-offset-4.col-md-16.col-md-offset-2
            .body.pt1 
              each paragraph, key in blog.content.intro.paragraphs
                p!= paragraph
            each highlight, key in blog.content.highlights
              .highlight(id="highlight"+key)
                -if(highlight.ordered)
                  .number= highlight.order
                -if(highlight.title !== null)
                  a(href=highlight.title.url).highlight-title= highlight.title.text
                -if(highlight.image.url !== null)
                  .highlight-image-container
                    img(data-original= highlight.image.url)
                -if(highlight.subtitle.text !== null)
                  .highlight-subtitle
                    span!= highlight.subtitle.text
                -if(highlight.content.paragraphs !== null)
                  .highlight-content
                    each highlightParagraph, key in highlight.content.paragraphs
                      p!= highlightParagraph
