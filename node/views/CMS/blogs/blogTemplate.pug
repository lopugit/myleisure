            .title#title!= blog.title.text
            
            .author 
              .descriptor By 
              a(href= blog.author.linkedIn, target="_blank")= blog.author.firstName + ' ' + blog.author.lastName
            .date= blog.dateCreated.formatted
            .tags
              .tag
                a(href="/blogs/"+blog.slug.url)= blog.slug.text
            .subtitle= blog.subtitle.text
            .social-icons-box
              a(href="http://www.facebook.com/sharer.php?u=https%3A%2F%2Fmyleisure.com.au%2Fblogs%2F"+blog.slug.url)            
                .fa.fa-facebook-square
              a(href="http://twitter.com/intent/tweet?text=our%20first%20blog%20post&url=https%3A%2F%2Fmyleisure.com.au%2Fblogs%2F"+blog.slug.url)
